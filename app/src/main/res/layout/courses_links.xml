<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/containerForCourse1"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="5dp"
        android:background="@color/white"
        app:cardCornerRadius="7dp"
        app:cardElevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="140dp"
                android:id="@+id/image"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:src="@drawable/updated"
                android:padding="2dp"
                android:background="@drawable/ic_rounded_80_corner"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/courselink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/courseLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Please Wait !"
                android:fontFamily="@font/acme"
                android:padding="5dp"
                android:layout_margin="2dp"
                app:layout_constraintStart_toEndOf="@+id/image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/courseDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:fontFamily="@font/acme"
                android:padding="5dp"
                android:layout_margin="2dp"
                app:layout_constraintStart_toEndOf="@+id/image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/courseLabel"
                android:textColor="@color/black"
                />

            <Button
                android:id="@+id/courseBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/acme"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="open"
                android:textColor="@color/yellow" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>